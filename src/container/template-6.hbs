<header class="header">

    <div class="">
        {{> logo}}
    </div>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">

        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>

    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="inputs">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" id="{{id}}" class="form_input" name="{{name}}">

            {{/each}}
        </div>


    </form>
    {{/with}}
</main>

<footer class="footer">

    <div>
        {{> logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title"> {{title}} </span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>